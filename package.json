{
	"name": "reco-server",
	"version": "1.0.0",
	"description": "Server for the recommended App. GraphQL, Typescript, NodeJS",
	"main": "index.js",
	"repository": "https://github.com/ganzp87/uber-server",
	"author": "ganzp",
	"license": "MIT",
	"engines": {
		"node": "12.14.0"
	},
	"dependencies": {
		"@types/node": "^13.7.1",
		"app-store-scraper": "^0.16.2",
		"axios": "^0.19.2",
		"cheerio": "^1.0.0-rc.3",
		"class-validator": "^0.11.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"google-play-scraper": "^7.1.2",
		"graphql-tools": "^4.0.6",
		"graphql-yoga": "^1.18.3",
		"helmet": "^3.21.2",
		"memoizee": "^0.4.14",
		"merge-graphql-schemas": "^1.7.6",
		"morgan": "^1.9.1",
		"mstranslator": "^3.0.0",
		"pg": "^7.18.1",
		"request": "^2.88.2",
		"ts-node": "^8.6.2",
		"typeorm": "^0.2.22",
		"typescript": "^3.7.5",
		"uuidv4": "^6.0.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.6",
		"@types/helmet": "0.0.45",
		"@types/memoizee": "^0.4.3",
		"@types/morgan": "^1.7.37",
		"@types/request": "^2.48.4",
		"babel-runtime": "^6.26.0",
		"copy": "^0.3.2",
		"gql-merge": "^0.0.6",
		"graphql-to-typescript": "^0.1.2",
		"nodemon": "^2.0.2",
		"tslint-config-prettier": "^1.18.0"
	},
	"scripts": {
		"predev": "yarn run types",
		"dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
		"testdev": "cd dist && nodemon --exec node index.js -e js,graphql",
		"pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
		"types": "graphql-to-typescript ./src/schema.graphql ./src/types/graphql.d.ts",
		"build": "tsc -t ES2018",
		"postbuild": "yarn copy src/api/**/*.graphql dist/api",
		"start": "cd dist && node ."
	}
}
